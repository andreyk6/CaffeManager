<Window x:Class="CaffeManager.View.AddManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaffeManager.View"
        mc:Ignorable="d"
        Title="User creation" Height="250" Width="300">
    <StackPanel>
        <Label Content="Enter User data:" FontWeight="Bold" FontSize="13.333"/>
        <DockPanel Margin="5" >
            <Label Content="Name"></Label>
            <TextBox Text="{Binding Name}"></TextBox>
        </DockPanel>
        <DockPanel Margin="5">
            <Label Content="Login"></Label>
            <TextBox Text="{Binding Login}"></TextBox>
        </DockPanel>
        <DockPanel Margin="5">
            <Label Content="Password"></Label>
            <TextBox Text="{Binding Password}"></TextBox>
        </DockPanel>
        <DockPanel Margin="5">
            <Label Content="User role:"></Label>
            <Label Content="{Binding Role}"></Label>
        </DockPanel>
        <Button Margin="0,0,5,0" Width="70" HorizontalAlignment="Right" Content="Create" Click="Button_Click"></Button>
    </StackPanel>
</Window>
